def rotate_pairs(word,dict_word):
    """Prints all words in 'words.text' that 
    can be generated by rotating word.
    word: string
    dict_word: dictionary with words as keys"""
    for i in range(1,14):
        for key in word:
             rotate= rotate_word(key,i)
             if rotate in word:
                 print key, i,rotate_word(key,i)
w = dict_words()
rotate_pairs(w, 13)






